%html
  %head
    %meta(charset="utf-8")
    %link(rel='stylesheet' href="/css/bootstrap/3.2.0/bootstrap.min.css")
    %link(rel='stylesheet' href="/css/app.css")
    %script(src="/js/jquery-2.1.0.min.js")
    %script(src="/js/bootstrap.min.js")
  %body
    %nav.navbar.navbar-default.navbar-static-top.navbar-inverse
      %ul.navbar-nav.nav
        %li
          %a(href="/") Home
        %li
          %a(href="/issues/new") New issue
    .container
      -if flash[:alert]
        .flash.bg-danger=flash[:alert]
      -if flash[:warning]
        .flash.bg-danger=flash[:warning]
      -if flash[:notice]
        .flash.bg-success=flash[:notice]
      
      =yield
